<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="741dp"
    android:layout_height="451dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/custom_button">

    <TextView
        android:id="@+id/tv_appsubmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_app_has_been_submitted"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/montserratblack"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_return_to_job_desc"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_btn"
        android:fontFamily="@font/montserrat"
        android:text="@string/return_to_job_description"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_appsubmitted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>