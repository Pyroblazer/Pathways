<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.profile.EditProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_blue"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="490dp"
                android:layout_marginEnd="390dp"
                android:fontFamily="@font/montserratblack"
                android:text="Pathway"
                android:textColor="@color/white"
                android:textSize="60sp" />

            <ImageButton
                android:id="@+id/btn_user_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/person"
                />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/montserratblack"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="70sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_back"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="310dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/montserratblack"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_save"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:background="@drawable/custom_btn"
                android:fontFamily="@font/montserratblack"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/layout">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp" />

            <EditText
                android:id="@+id/id_name"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="300dp"
                android:background="@drawable/custom_input" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relative_one">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp" />

            <EditText
                android:id="@+id/id_email"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="300dp"
                android:background="@drawable/custom_input"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relative_two">

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/montserrat"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/id_pass"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="300dp"
                android:background="@drawable/custom_input"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relative_three">

            <TextView
                android:id="@+id/tv_repass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-Password"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp" />

            <EditText
                android:id="@+id/id_repass"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:hint="Re-Password"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="300dp"
                android:background="@drawable/custom_input"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relative_four">

            <TextView
                android:id="@+id/tv_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Picture"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp" />

            <ImageView
                android:id="@+id/id_pp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="350dp"
                android:src="@color/button_grey" />

            <ImageButton
                android:id="@+id/btn_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-Password"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_toRightOf="@id/id_pp"
                android:layout_marginStart="8dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_camera"
                android:background="@color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relative_five">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Official ID"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp" />

            <ImageView
                android:id="@+id/id_id"
                android:layout_width="220dp"
                android:layout_height="140dp"
                android:text="Official ID"
                android:layout_marginStart="350dp"
                android:src="@color/button_grey"
                />
            <ImageButton
                android:id="@+id/btn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-Password"
                android:textSize="40sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_toRightOf="@id/id_id"
                android:layout_marginStart="8dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_camera"
                android:background="@color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/relative_six">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Description"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp" />

            <TextView
                android:id="@+id/id_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/lorem_ipsum"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_below="@+id/tv_desc"
                android:background="@drawable/custom_input"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toBottomOf="@+id/relative_seven">

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="60dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginStart="400dp"
                android:background="@drawable/custom_btn"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/relative_eight" >

            <RelativeLayout
                android:id="@+id/relative_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/custom_item_list"
                app:layout_constraintTop_toBottomOf="@+id/relative_eight" >

                <ImageView
                    android:id="@+id/img_recommended_people"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/button_grey"
                    />


                <TextView
                    android:id="@+id/txt_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_toEndOf="@+id/img_recommended_people"
                    android:text="@string/python_programming"
                    android:fontFamily="@font/montserratblack"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_edit"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Edit"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:background="@drawable/custom_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_delete"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Delete"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:background="@drawable/custom_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/btn_edit"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:id="@+id/txt_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_experience"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/img_recommended_people"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/data_camp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat"/>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_company_name"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/img_recommended_people"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="MM YYYY - MM YYYY"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat"/>

                <TextView
                    android:id="@+id/txt_company_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_delete"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/img_recommended_people"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"/>

            </RelativeLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>